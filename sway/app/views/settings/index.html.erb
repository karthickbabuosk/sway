<% content_for :layoutType do %>menubar-hoverable header-fixed <% end %>
<div id="settings_form">
	<h4>
		Settings
	</h4>
	<form action="/settings" method="post" , id="form-configuration">
		<div class="form-group">
  			<label>
  				Providers  				
  			</label>
  			<select placeholder="Choose provider">
  				<option value="-1"></option>
  				<option value = "1">Chargebee</option>
  			</select>
  		</div>	
  		<div class="form-group">
  			<label>
  				Site info
  			</label>
  			<input type="text" class="form-control" name="site" placeholder="Enter Site info" />
      </div>
        <div class="form-group">
        <label>
          API key
        </label>
        <input type="text" class="form-control" name="api_key" placeholder="Enter API Key" />
  		</div>	
  		<div class="form-group">
		  	<input type="submit" value="Save" class="btn btn-primary"/>
		</div>
	</form>
</div>